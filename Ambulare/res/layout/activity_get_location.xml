<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_get_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/get_location_bt_getlocation"
        android:text="@string/get_coor"/>
     
    <LinearLayout 
        android:id="@+id/activity_get_location_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:orientation="horizontal">
        
        <TextView 
	        android:id="@+id/activity_get_location_TV1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="5dip"
	        android:text="Latitude: "
	        android:textSize="20dip"/>
    
   		<TextView 
   		    android:id="@+id/activity_get_location_TV2"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:text="unknown"
   		    android:textSize="20dip"/>
        
    </LinearLayout>
    
     <LinearLayout 
        android:id="@+id/activity_get_location_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView 
	        android:id="@+id/activity_get_location_TV3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="5dip"
	        android:text="Longitude: "
	        android:textSize="20dip"/>
    
   		<TextView 
   		    android:id="@+id/activity_get_location_TV4"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:text="unknown"
   		    android:textSize="20dip"/>
        
    </LinearLayout>
    

</LinearLayout>
