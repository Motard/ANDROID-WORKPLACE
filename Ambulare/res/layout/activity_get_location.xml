<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_get_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/get_location_bt_getlocation"
        android:text="@string/get_coor"/>
     
     <EditText
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/et_activity_get_location_get_rota"
         android:hint="@string/get_rota_hint"/>
     
    <LinearLayout 
        android:id="@+id/activity_get_location_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:orientation="horizontal">
        
        <TextView 
	        android:id="@+id/activity_get_location_TV1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="5dip"
	        android:text="Latitude: "
	        android:textSize="20dip"/>
    
   		<TextView 
   		    android:id="@+id/activity_get_location_TV2"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:text="@string/desconhecido"
   		    android:textSize="20dip"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/activity_get_location_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView 
	        android:id="@+id/activity_get_location_TV3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="5dip"
	        android:text="Longitude: "
	        android:textSize="20dip"/>
    
   		<TextView 
   		    android:id="@+id/activity_get_location_TV4"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:text="@string/desconhecido"
   		    android:textSize="20dip"/>
        
    </LinearLayout>
    
	<LinearLayout
	    	android:id="@+id/activity_get_location_ll3"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
	  	  
		<TextView
		    android:id="@+id/tv_activity_get_location_accuracy"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="25dip"
		    android:text="@string/tv_acuracy"/>
	    
		<TextView
		    android:id="@+id/tv_activity_get_location_accuracy_value"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/desconhecido"/>
		
		<TextView
		    android:id="@+id/tv_activity_get_location_altitude"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dip"
		    android:text="@string/tv_altitude"/>
	    
		<TextView
		    android:id="@+id/tv_activity_get_location_altitude_value"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/desconhecido"/>
		
		<TextView
		    android:id="@+id/tv_activity_get_location_direcao"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dip"
		    android:text="@string/tv_direcao"/>
	    
		<TextView
		    android:id="@+id/tv_activity_get_location_direcao_value"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/desconhecido"/>
	
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/activity_get_location_ll4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
		
	    	<TextView
		    android:id="@+id/tv_activity_get_location_velocidade"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="50dip"
		    android:text="@string/tv_velocidade"/>
	    
		<TextView
		    android:id="@+id/tv_activity_get_location_velocidade_value"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/desconhecido"/>
	    	
	</LinearLayout>
	
</LinearLayout>
